<header class="b-header py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
        <div class="col-4 pt-1">
            <!--                        <a class="text-muted" href="#">Subscribe</a>-->
        </div>
        <div class="col-4 text-center">
            <a class="b-header-logo text-dark" href="#">Smart HTS</a>
        </div>
        <div class="col-4 d-flex justify-content-end align-items-center">
            <div class="profile-wrap align-content-center">
                <% if (user && user.email) { %>
                    <input id="my-id" type="hidden" value="<%= user.email %>">
                    <span> <%= user.displayName %> 님 안녕하세요.
                        <a href="/auth/logout" class="btn btn-sm btn-outline-secondary" class="btn"
                           style="margin-left: 10px">Log out</a>
                            </span>
                <% } else { %>
                    <p style="margin-bottom:0">
                        <a class="btn btn-sm btn-outline-secondary" href="/login">Log in</a>
                    </p>
                <% } %>
            </div>
        </div>
    </div>
</header>
